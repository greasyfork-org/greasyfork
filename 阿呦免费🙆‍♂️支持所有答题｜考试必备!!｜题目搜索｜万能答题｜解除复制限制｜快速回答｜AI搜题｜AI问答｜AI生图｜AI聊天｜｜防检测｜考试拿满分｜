    'use strict';

    // 添加助手样式
    GM_addStyle(`
        .cx-helper-panel {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
            z-index: 99999;
            width: 320px;
            border: 1px solid #e0e0e0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
            transform: translateY(0);
            opacity: 1;
        }

        .cx-helper-header {
            font-size: 20px;
            font-weight: bold;
            color: #1a2980;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .cx-helper-status {
            background: linear-gradient(to right, #ff9a9e, #fad0c4);
            padding: 12px;
            border-radius: 8px;
            margin: 15px 0;
            text-align: center;
            color: #d32f2f;
            font-size: 15px;
            font-weight: 500;
        }

        .cx-helper-btn {
            display: block;
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            background: linear-gradient(to right, #1a2980, #26d0ce);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .cx-helper-btn::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -60%;
            width: 20px;
            height: 200%;
            background: rgba(255,255,255,0.3);
            transform: rotate(25deg);
            transition: all 0.6s;
        }

        .cx-helper-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 41, 128, 0.4);
        }

        .cx-helper-btn:hover::after {
            left: 120%;
        }

        .cx-helper-btn.preview {
            background: linear-gradient(to right, #6c757d, #495057);
        }

        .cx-invite-section {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px dashed #ddd;
            text-align: center;
        }

        .cx-invite-title {
            font-size: 16px;
            color: #1a2980;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .cx-invite-code {
            font-weight: bold;
            color: #d32f2f;
            font-size: 20px;
            margin: 8px 0;
            padding: 8px 15px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50px;
            display: inline-block;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .cx-invite-code:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

        .cx-invite-note {
            font-size: 13px;
            color: #7f8c8d;
        }

        .login-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 100000;
            justify-content: center;
            align-items: center;
        }

        .login-modal-content {
            background: white;
            border-radius: 15px;
            padding: 30px;
            width: 90%;
            max-width: 450px;
            text-align: center;
            position: relative;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            animation: modalAppear 0.4s ease;
        }

        @keyframes modalAppear {
            0% { transform: translateY(-30px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        .login-modal h2 {
            color: #1a2980;
            margin-top: 0;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .login-modal p {
            color: #495057;
            margin-bottom: 25px;
            font-size: 16px;
            line-height: 1.6;
        }

        .modal-btn {
            display: inline-block;
            padding: 12px 30px;
            background: linear-gradient(to right, #1a2980, #26d0ce);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            margin: 5px;
        }

        .modal-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 41, 128, 0.4);
        }

        .modal-btn.secondary {
            background: #6c757d;
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 24px;
            cursor: pointer;
            color: #6c757d;
            transition: all 0.3s;
        }

        .close-modal:hover {
            color: #1a2980;
            transform: rotate(90deg);
        }
    `);

    // 创建助手面板
    function createHelperPanel() {
        const panel = document.createElement('div');
        panel.className = 'cx-helper-panel';
        panel.innerHTML = `
            <div class="cx-helper-header">
                <span>📚</span> 阿呦网课助手
            </div>
            <div class="cx-helper-status">
                <span>⚠️</span> 未登录 - 功能不可用
            </div>
            <button class="cx-helper-btn" id="cx-use-btn">
                <span>🔑</span> 登录使用完整功能
            </button>
            <button class="cx-helper-btn preview" id="cx-preview-btn">
                <span>👁️</span> 预览功能演示
            </button>
            <div class="cx-invite-section">
                <div class="cx-invite-title">注册邀请码</div>
                <div class="cx-invite-code">8888</div>
                <div class="cx-invite-note">有效期至2099年12月31日</div>
            </div>
        `;

        document.body.appendChild(panel);
        return panel;
    }

    // 创建登录模态框
    function createLoginModal() {
        const modal = document.createElement('div');
        modal.className = 'login-modal';
        modal.innerHTML = `
            <div class="login-modal-content">
                <div class="close-modal">&times;</div>
                <h2>登录阿呦网课助手</h2>
                <p>您需要登录才能使用完整功能，注册邀请码：8888，请选择登录方式：</p >
                <div style="margin: 25px 0;">
                    <button class="modal-btn" id="custom-login-btn">
                        账号登录
                    </button>
                    <button class="modal-btn secondary" id="chaoxing-login-btn">
                        APP下载登录
                    </button>
                </div>
                <p style="font-size:14px; color:#6c757d;">【😉♂️已完美兼容、智慧树、中国大学mooc、慕课、雨课堂、新国开、超星、学习通、知到、国家开放大学、蓝墨云、职教云、智慧职教、云班课精品课、剩余网站仅支持部分功能✨】、【🎇完美应付考试、测试，一键搜题😎】、【兼容、U校园、学堂在线】、【🎉新增AI搜题、AI问答，AI生图，Ai聊天定制化服务🥳】、【💙强制破除网站不可复制文字💙】、【🐮基于生成式AI(ChatGPT)的答案生成🐮】、【有其他平台支持需要的请加群催更:😄946618812😄，共同交流进步脚本无任何诸如（手机号，学校信息，等隐私信息）收集💚】</p >
            </div>
        `;

        document.body.appendChild(modal);
        return modal;
    }

    // 初始化助手
    function initHelper() {
        // 创建UI元素
        const panel = createHelperPanel();
        const loginModal = createLoginModal();

        // 添加事件监听
        document.getElementById('cx-use-btn').addEventListener('click', function() {
            loginModal.style.display = 'flex';
        });

        document.getElementById('cx-preview-btn').addEventListener('click', function() {
            GM_notification({
                title: '预览模式',
                text: '预览模式仅展示界面，实际功能需要登录后使用。',
                timeout: 4000
            });
        });

        document.getElementById('custom-login-btn').addEventListener('click', function() {
            // 打开网站登录网站
            GM_openInTab('https://zhiyuezeno.top', {active: true});

            // 显示通知
            GM_notification({
                title: '登录提示',
                text: '请在新打开的页面完成登录操作',
                timeout: 5000
            });

            loginModal.style.display = 'none';
        });

        document.getElementById('chaoxing-login-btn').addEventListener('click', function() {
            // 打开APP下载页面
            GM_openInTab('https://zhiyuezeno.top/download', {active: true});
            loginModal.style.display = 'none';
        });

        document.querySelector('.close-modal').addEventListener('click', function() {
            loginModal.style.display = 'none';
        });

        // 点击模态框外部关闭
        loginModal.addEventListener('click', function(e) {
            if (e.target === loginModal) {
                loginModal.style.display = 'none';
            }
        });

        // 面板拖拽功能
        let isDragging = false;
        let offsetX, offsetY;

        panel.addEventListener('mousedown', function(e) {
            if (e.target === panel || e.target.classList.contains('cx-helper-header')) {
                isDragging = true;
                offsetX = e.clientX - panel.getBoundingClientRect().left;
                offsetY = e.clientY - panel.getBoundingClientRect().top;
                panel.style.cursor = 'grabbing';
            }
        });

        document.addEventListener('mousemove', function(e) {
            if (isDragging) {
                panel.style.left = (e.clientX - offsetX) + 'px';
                panel.style.top = (e.clientY - offsetY) + 'px';
                panel.style.right = 'auto';
            }
        });

        document.addEventListener('mouseup', function() {
            isDragging = false;
            panel.style.cursor = 'default';
        });
    }

    // 页面加载完成后初始化
    if (document.readyState === 'complete') {
        initHelper();
    } else {
        window.addEventListener('load', initHelper);
    }

    // 单页应用处理
    let lastUrl = location.href;
    setInterval(function() {
        if (location.href !== lastUrl) {
            lastUrl = location.href;
            // 重新初始化助手（如果元素被移除）
            if (!document.querySelector('.cx-helper-panel')) {
                initHelper();
            }
        }
    }, 1000);
})();
