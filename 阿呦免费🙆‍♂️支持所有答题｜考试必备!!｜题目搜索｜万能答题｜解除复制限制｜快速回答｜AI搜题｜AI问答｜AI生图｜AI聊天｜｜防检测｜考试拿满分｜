    }

    // åˆ›å»ºç™»å½•æ¨¡æ€æ¡†
    function createLoginModal() {
        const modal = document.createElement('div');
        modal.className = 'login-modal';
        modal.innerHTML = `
            <div class="login-modal-content">
                <div class="close-modal">&times;</div>
                <h2>ç™»å½•é˜¿å‘¦ç½‘è¯¾åŠ©æ‰‹</h2>
                <p>æ‚¨éœ€è¦ç™»å½•æ‰èƒ½ä½¿ç”¨å®Œæ•´åŠŸèƒ½ï¼Œæ³¨å†Œé‚€è¯·ç ï¼š8888ï¼Œè¯·é€‰æ‹©ç™»å½•æ–¹å¼ï¼š</p >
                <div style="margin: 25px 0;">
                    <button class="modal-btn" id="custom-login-btn">
                        è´¦å·ç™»å½•
                    </button>
                    <button class="modal-btn secondary" id="chaoxing-login-btn">
                        APPä¸‹è½½ç™»å½•
                    </button>
                </div>
                <p style="font-size:14px; color:#6c757d;">ã€ğŸ˜‰â™‚ï¸å·²å®Œç¾å…¼å®¹ã€æ™ºæ…§æ ‘ã€ä¸­å›½å¤§å­¦moocã€æ…•è¯¾ã€é›¨è¯¾å ‚ã€æ–°å›½å¼€ã€è¶…æ˜Ÿã€å­¦ä¹ é€šã€çŸ¥åˆ°ã€å›½å®¶å¼€æ”¾å¤§å­¦ã€è“å¢¨äº‘ã€èŒæ•™äº‘ã€æ™ºæ…§èŒæ•™ã€äº‘ç­è¯¾ç²¾å“è¯¾ã€å‰©ä½™ç½‘ç«™ä»…æ”¯æŒéƒ¨åˆ†åŠŸèƒ½âœ¨ã€‘ã€ã€ğŸ‡å®Œç¾åº”ä»˜è€ƒè¯•ã€æµ‹è¯•ï¼Œä¸€é”®æœé¢˜ğŸ˜ã€‘ã€ã€å…¼å®¹ã€Uæ ¡å›­ã€å­¦å ‚åœ¨çº¿ã€‘ã€ã€ğŸ‰æ–°å¢AIæœé¢˜ã€AIé—®ç­”ï¼ŒAIç”Ÿå›¾ï¼ŒAièŠå¤©å®šåˆ¶åŒ–æœåŠ¡ğŸ¥³ã€‘ã€ã€ğŸ’™å¼ºåˆ¶ç ´é™¤ç½‘ç«™ä¸å¯å¤åˆ¶æ–‡å­—ğŸ’™ã€‘ã€ã€ğŸ®åŸºäºç”Ÿæˆå¼AI(ChatGPT)çš„ç­”æ¡ˆç”ŸæˆğŸ®ã€‘ã€ã€æœ‰å…¶ä»–å¹³å°æ”¯æŒéœ€è¦çš„è¯·åŠ ç¾¤å‚¬æ›´:ğŸ˜„946618812ğŸ˜„ï¼Œå…±åŒäº¤æµè¿›æ­¥è„šæœ¬æ— ä»»ä½•è¯¸å¦‚ï¼ˆæ‰‹æœºå·ï¼Œå­¦æ ¡ä¿¡æ¯ï¼Œç­‰éšç§ä¿¡æ¯ï¼‰æ”¶é›†ğŸ’šã€‘</p >
            </div>
        `;

        document.body.appendChild(modal);
        return modal;
    }

    // åˆå§‹åŒ–åŠ©æ‰‹
    function initHelper() {
        // åˆ›å»ºUIå…ƒç´ 
        const panel = createHelperPanel();
        const loginModal = createLoginModal();

        // æ·»åŠ äº‹ä»¶ç›‘å¬
        document.getElementById('cx-use-btn').addEventListener('click', function() {
            loginModal.style.display = 'flex';
        });

        document.getElementById('cx-preview-btn').addEventListener('click', function() {
            GM_notification({
                title: 'é¢„è§ˆæ¨¡å¼',
                text: 'é¢„è§ˆæ¨¡å¼ä»…å±•ç¤ºç•Œé¢ï¼Œå®é™…åŠŸèƒ½éœ€è¦ç™»å½•åä½¿ç”¨ã€‚',
                timeout: 4000
            });
        });

        document.getElementById('custom-login-btn').addEventListener('click', function() {
            // æ‰“å¼€ç½‘ç«™ç™»å½•ç½‘ç«™
            GM_openInTab('https://zhiyuezeno.top', {active: true});

            // æ˜¾ç¤ºé€šçŸ¥
            GM_notification({
                title: 'ç™»å½•æç¤º',
                text: 'è¯·åœ¨æ–°æ‰“å¼€çš„é¡µé¢å®Œæˆç™»å½•æ“ä½œ',
                timeout: 5000
            });

            loginModal.style.display = 'none';
        });

        document.getElementById('chaoxing-login-btn').addEventListener('click', function() {
            // æ‰“å¼€APPä¸‹è½½é¡µé¢
            GM_openInTab('https://zhiyuezeno.top/download', {active: true});
            loginModal.style.display = 'none';
        });

        document.querySelector('.close-modal').addEventListener('click', function() {
            loginModal.style.display = 'none';
        });

        // ç‚¹å‡»æ¨¡æ€æ¡†å¤–éƒ¨å…³é—­
        loginModal.addEventListener('click', function(e) {
            if (e.target === loginModal) {
                loginModal.style.display = 'none';
            }
        });

        // é¢æ¿æ‹–æ‹½åŠŸèƒ½
        let isDragging = false;
        let offsetX, offsetY;

        panel.addEventListener('mousedown', function(e) {
            if (e.target === panel || e.target.classList.contains('cx-helper-header')) {
                isDragging = true;
                offsetX = e.clientX - panel.getBoundingClientRect().left;
                offsetY = e.clientY - panel.getBoundingClientRect().top;
                panel.style.cursor = 'grabbing';
            }
        });

        document.addEventListener('mousemove', function(e) {
            if (isDragging) {
                panel.style.left = (e.clientX - offsetX) + 'px';
                panel.style.top = (e.clientY - offsetY) + 'px';
                panel.style.right = 'auto';
            }
        });

        document.addEventListener('mouseup', function() {
            isDragging = false;
            panel.style.cursor = 'default';
        });
    }

    // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
    if (document.readyState === 'complete') {
        initHelper();
    } else {
        window.addEventListener('load', initHelper);
    }

    // å•é¡µåº”ç”¨å¤„ç†
    let lastUrl = location.href;
    setInterval(function() {
        if (location.href !== lastUrl) {
            lastUrl = location.href;
            // é‡æ–°åˆå§‹åŒ–åŠ©æ‰‹ï¼ˆå¦‚æœå…ƒç´ è¢«ç§»é™¤ï¼‰
            if (!document.querySelector('.cx-helper-panel')) {
                initHelper();
            }
        }
    }, 1000);
})();
