<% include_script = false unless defined?(include_script) %>
<% if include_script %>
  <%= link_to script_report.script.name(request_locale), script_path(script_report.script) %>
  -
<% end %>
<% case script_report.report_type %>
<% when ScriptReport::TYPE_UNAUTHORIZED_CODE %>
  Unauthorized copy of <%= link_to script_report.reference_script.name(request_locale), script_report.reference_script %> -
<% when ScriptReport::TYPE_MALWARE %>
  Malware
<% when ScriptReport::TYPE_SPAM %>
  Spam
<% end %>
<%= link_to 'View report', script_script_report_path(script_report.script, script_report) %> -
<% if script_report.upheld? %>
  Script deleted
<% elsif script_report.dismissed? %>
  Report dismissed
<% else %>
  Pending
<% end %>
